{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "lib": [
      "es5",
      "es6",
      "es7"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "copyStatic.ts"
  ]
}
